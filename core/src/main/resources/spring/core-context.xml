<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="
	  http://www.springframework.org/schema/beans
	  http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/integration
    http://www.springframework.org/schema/integration/spring-integration.xsd">

  <bean id="collector" class="com.irksomeideas.domal.collector.SnmpCollector"/>
  <bean id="persist" class="com.irksomeideas.domal.model.Persist"/>

  <int:inbound-channel-adapter ref="collector" method="getNextMetric" channel="metrics">
    <int:poller fixed-rate="2000" max-messages-per-poll="1"/>
  </int:inbound-channel-adapter>
  
  <int:channel id="metrics"/>
  
  <int:service-activator ref="persist" input-channel="metrics"/>
  
</beans>
